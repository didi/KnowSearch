<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.didichuxing.datachannel.arius.admin.persistence.mysql.gateway.GatewayClusterNodeDAO">
    <resultMap id="BaseResultMap" type="com.didichuxing.datachannel.arius.admin.common.bean.po.gateway.GatewayClusterNodePO">
        <result column="id" jdbcType="BIGINT" property="id"/>
        <result column="cluster_name" jdbcType="VARCHAR" property="clusterName"/>
        <result column="host_name" jdbcType="VARCHAR" property="hostName"/>
        <result column="node_name" jdbcType="VARCHAR" property="nodeName"/>
        <result column="port" jdbcType="INTEGER" property="port"/>
        <result column="machine_spec" jdbcType="VARCHAR" property="machineSpec"/>
        <result column="heartbeat_time" jdbcType="TIMESTAMP" property="heartbeatTime"/>
        <result column="cpu_usage" jdbcType="DOUBLE" property="cpuUsage"/>
        <result column="http_connection_num" jdbcType="INTEGER" property="httpConnectionNum"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, cluster_name, host_name, port, heartbeat_time, create_time, update_time,node_name,machine_spec,cpu_usage,http_connection_num
    </sql>

    <insert id="recordGatewayNode"
            parameterType="com.didichuxing.datachannel.arius.admin.common.bean.po.gateway.GatewayClusterNodePO"
            keyColumn="id">
        insert into gateway_cluster_node_info
            (cluster_name, host_name, port, heartbeat_time,machine_spec,cpu_usage,http_connection_num)
        values (#{clusterName}, #{hostName}, #{port}, #{heartbeatTime},#{machineSpec},#{cpuUsage},#{httpConnectionNum}) ON DUPLICATE KEY
        UPDATE heartbeat_time= #{heartbeatTime}
    </insert>

    <select id="aliveCountByClusterNameAndTime" parameterType="map" resultType="integer">
        select count(*)
        from gateway_cluster_node_info
        where cluster_name = #{clusterName} AND heartbeat_time > #{time}
    </select>

    <select id="listAliveNodeByClusterNameAndTime" parameterType="map" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from gateway_cluster_node_info
        where cluster_name = #{clusterName} AND heartbeat_time > #{time}
    </select>
    
    <insert
      id="insert"
      parameterType="com.didichuxing.datachannel.arius.admin.common.bean.po.gateway.GatewayClusterNodePO"
            useGeneratedKeys="true"
            keyColumn="id" keyProperty="id">
        INSERT INTO gateway_cluster_node_info
            (cluster_name, host_name, `port`,machine_spec,cpu_usage,http_connection_num)
        VALUES (#{clusterName},#{hostName},#{port},#{machineSpec},#{cpuUsage},#{httpConnectionNum})
    </insert>
    
    <select id="selectByBatchClusterName" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM gateway_cluster_node_info WHERE   cluster_name IN
        <foreach collection="clusterNames" separator="," item="clusterName" close=")" open="(">
            #{clusterName}
        </foreach>
    </select>
    
    <select id="selectByClusterName" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM gateway_cluster_node_info WHERE   cluster_name=#{clusterName}
    </select>
    
    <delete id="deleteByClusterName">
        DELETE
        FROM gateway_cluster_node_info
        WHERE cluster_name = #{clusterName}
    </delete>
    
    <select id="listByCondition" resultMap="BaseResultMap">
         SELECT
        <include refid="Base_Column_List"/>
        FROM gateway_cluster_node_info
        <where>
            <if test="nodeName != null and nodeName != ''">
                AND node_name LIKE CONCAT('%'
                , #{nodeName}
                , '%')
            </if>
            <if test="clusterName != null and clusterName != ''">
                AND cluster_name = #{clusterName}
            </if>
        </where>
         <if test="sortTerm != null">
            order by ${sortTerm} ${sortType}
        </if>
        limit #{from}, #{size}
    </select>
    
    <select id="countByCondition" resultType="java.lang.Long">
        SELECT COUNT(1)
        FROM gateway_cluster_node_info
        <where>
            <if test="clusterName != null and clusterName != ''">
                AND cluster_name = #{clusterName}
            </if>
            <if test="nodeName != null and nodeName != ''">
                AND node_name LIKE CONCAT('%'
                    , #{nodeName}
                    , '%')
            </if>
        </where>
    </select>
    
    <select id="listByHosts" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM gateway_cluster_node_info WHERE
            host_name IN
        <foreach collection="hosts" separator="," item="host" close=")" open="(">
            #{host}
        </foreach>
    </select>
    
    <delete id="deleteBatch">
        DELETE  FROM gateway_cluster_node_info
        WHERE id IN
         <foreach collection="ids" separator="," item="id" close=")" open="(">
            #{id}
        </foreach>
    </delete>
    
    <update id="update">
        <!--@mbg.generated-->UPDATE `gateway_cluster_node_info`
        <set>
            <if test="clusterName != null and clusterName != ''">`cluster_name` = #{clusterName},</if>
            <if test="hostName != null and hostName != ''">
                `host_name` = #{hostName},</if>
            <if test="port != null">
                `port` = #{port},</if>
            <if test="heartbeatTime != null">
                `heartbeat_time` = #{heartbeatTime},</if>
            <if test="createTime != null">
                `create_time` = #{createTime},</if>
            <if test="updateTime != null">
                `update_time` = #{updateTime},</if>
            <if test="nodeName != null and nodeName != ''">
                `node_name` = #{nodeName},</if>
            <if test="machineSpec != null and machineSpec != ''">
                `machine_spec` = #{machineSpec},</if>
            <if test="cpuUsage != null">
                `cpu_usage` = #{cpuUsage},</if>
            <if test="httpConnectionNum != null">
                `http_connection_num` = #{httpConnectionNum},</if>
        </set>
        WHERE `id` = #{id}
    </update>
</mapper>
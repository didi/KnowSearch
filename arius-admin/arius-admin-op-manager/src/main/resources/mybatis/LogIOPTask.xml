<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.didiglobal.logi.op.manager.infrastructure.db.mapper.TaskDao">
    <resultMap id="BaseResultMap"
               type="com.didiglobal.logi.op.manager.infrastructure.db.TaskPO">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="association_id" jdbcType="VARCHAR" property="associationId"/>
        <result column="type" jdbcType="INTEGER" property="type"/>
        <result column="describe" jdbcType="VARCHAR" property="describe"/>
        <result column="is_finish" jdbcType="INTEGER" property="isFinish"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="content" jdbcType="VARCHAR" property="content"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, status, association_id, `describe`, `type`, is_finish, create_time, update_time, content
    </sql>

    <insert id="insert" parameterType="com.didiglobal.logi.op.manager.infrastructure.db.TaskPO"
            useGeneratedKeys="true"
            keyColumn="id" keyProperty="id">
        insert into logi_op_task (status, association_id, `describe`, `type`, is_finish, create_time, update_time, content)
        values (#{status}, #{associationId}, #{describe}, #{type}, #{isFinish}, #{createTime}, #{updateTime}, #{content})
    </insert>

    <select id="getById"
            parameterType="com.didiglobal.logi.op.manager.infrastructure.db.TaskPO"
            resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from logi_op_task
        where id = #{taskId}
    </select>

    <update id="updateStatus">
        update logi_op_task set status = #{status}
        where id = #{id}
    </update>

    <select id="getUnFinishTaskList"
            resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from logi_op_task
        where is_finish = 0
    </select>

    <update id="updateStatusAndIsFinish">
        update logi_op_task set status = #{status},is_finish = #{isFinish}
        where id = #{id}
    </update>
</mapper>
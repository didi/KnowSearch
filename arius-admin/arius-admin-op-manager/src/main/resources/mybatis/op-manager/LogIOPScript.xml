<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.didiglobal.logi.op.manager.infrastructure.db.mapper.ScriptDao">
    <resultMap id="BaseResultMap"
               type="com.didiglobal.logi.op.manager.infrastructure.db.ScriptPO">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="template_id" jdbcType="VARCHAR" property="templateId"/>
        <result column="content_url" jdbcType="VARCHAR" property="contentUrl"/>
        <result column="describe" jdbcType="VARCHAR" property="describe"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="creator" jdbcType="VARCHAR" property="creator"/>
        <result column="timeout" jdbcType="INTEGER" property="timeout"/>
    </resultMap>

    <sql id="Base_Column_List">
       id, `name`, template_id, content_url, `describe`, create_time, update_time, creator, timeout
    </sql>

    <insert id="insert" parameterType="com.didiglobal.logi.op.manager.infrastructure.db.ScriptPO"
            useGeneratedKeys="true"
            keyColumn="id" keyProperty="id">
        insert into logi_op_script (`name`, template_id, content_url, `describe`, create_time, update_time, creator, timeout)
        values (#{name}, #{templateId}, #{contentUrl}, #{describe}, #{createTime}, #{updateTime}, #{creator}, #{timeout})
    </insert>

    <update id="update" parameterType="com.didiglobal.logi.op.manager.infrastructure.db.ScriptPO">
        update logi_op_script
        <trim prefix="set" prefixOverrides=",">
            <if test="templateId != null">,template_id = #{templateId}</if>
            <if test="contentUrl != null">,content_url = #{contentUrl}</if>
            <if test="describe != null">,`describe` = #{describe}</if>
            <if test="updateTime != null">,update_time = #{updateTime}</if>
            <if test="creator != null">,creator = #{creator}</if>
            <if test="timeout != null">,timeout = #{timeout}</if>
        </trim>
        where id = #{id}
    </update>
    <select id="findById"
            parameterType="com.didiglobal.logi.op.manager.infrastructure.db.ScriptPO"
            resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from logi_op_script
        where id = #{id}
    </select>

    <select id="findByName"
            parameterType="com.didiglobal.logi.op.manager.infrastructure.db.ScriptPO"
            resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from logi_op_script
        where `name` = #{name}
        order by id desc
    </select>

    <select id="queryScript"
            parameterType="com.didiglobal.logi.op.manager.infrastructure.db.ScriptPO"
            resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from logi_op_script
        where 1 = 1
        <if test="name != null">and `name` LIKE CONCAT('%', #{name}, '%')</if>
        <if test="describe != null">and `describe` LIKE CONCAT('%', #{describe}, '%')</if>
        <if test="id != null">and id = #{id}</if>
        order by id desc
    </select>

    <delete id="delete" parameterType="com.didiglobal.logi.op.manager.infrastructure.db.ScriptPO">
        delete from logi_op_script
        where id = #{id}
    </delete>

    <select id="pagingByCondition"
            parameterType="com.didiglobal.logi.op.manager.infrastructure.db.ScriptPO"
            resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from logi_op_script
        where 1 = 1
        <if test="param.name != null">and `name` LIKE CONCAT('%', #{param.name}, '%')</if>
        <if test="param.id != null">and id = #{param.id}</if>
        order by  create_time desc
        limit #{from}, #{size}
    </select>

    <select id="countByCondition"
            parameterType="com.didiglobal.logi.op.manager.infrastructure.db.ScriptPO" resultType="long">
        select
        count(1)
        from logi_op_script
        where 1 = 1
        <if test="name != null">and `name` LIKE CONCAT('%', #{name}, '%')</if>
        <if test="id != null">and id = #{id}</if>
    </select>
</mapper>
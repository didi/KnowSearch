#!/bin/bash

WORKSPACE=$(cd $(dirname $0)/; pwd)
cd $WORKSPACE

module=scheduler
app=zeus-$module
conf=cfg.yml
localconf=cfg.local.yml
pidfile=var/app.pid
logfile=var/app.log

function check_pid() {
    if [ -f $pidfile ];then
        pid=`cat $pidfile`
        if [ -n $pid ]; then
            running=`ps -p $pid|grep zeus|grep -v "PID TTY" |wc -l`
            return $running
        fi
    fi
    return 0
}

function start() {
    check_pid
    running=$?
    if [ $running -gt 0 ];then
        echo -n "$app now is running already, pid="
        cat $pidfile
        return 1
    fi

    mkdir -p var

    c=$conf
    if [ -f $localconf ];then
        c=$localconf
    fi
    nohup ./$app -c $c &> $logfile &
    sleep 1
    running=`ps -p $! | grep -v "PID TTY" | wc -l`
    if [ $running -gt 0 ];then
        echo $! > $pidfile
        echo "$app started..., pid=$!"
    else
        echo "$app failed to start"
        return 1
    fi
}

function stop() {
    check_pid
    running=$?
    if [ $running -gt 0 ];then
        pid=`cat $pidfile`
        kill $pid
        rm -f $pidfile
        echo "$app stoped"
    else
        echo "$app already stoped"
    fi
}

function restart() {
    stop
    sleep 1
    start
}

function status() {
    check_pid
    running=$?
    if [ $running -gt 0 ];then
        echo "started"
    else
        echo "stoped"
    fi
}

function tailf() {
    tail -f var/*.log
}

function build() {
    go build
    if [ $? -ne 0 ]; then
        exit $?
    fi
    mv $module $app
    ./$app -v
}

function pack() {
    build
    version=`./$app -v`
    tar zcvf $app-$version.tar.gz control $conf $app 
    mv $app-$version.tar.gz ~/download
}

function packbin() {
    build
    version=`./$app -v`
    tar zcvf $app-bin-$version.tar.gz $app
}

function help() {
    echo "$0 pid|reload|build|pack|packbin|start|stop|restart|status|tail"
}

function pid() {
    cat $pidfile
}

function update() {
    ver=$1
    if [ "x$ver" == "x" ]; then
        echo "version is necessary"
        exit 1
    fi

    rm -rf zeus-scheduler-$ver.tar.gz
    wget http://csop-zeus-web00.ys:8888/zeus-scheduler-$ver.tar.gz || (echo "download fail"; exit 1)
    tar zxvf zeus-scheduler-$ver.tar.gz

    restart
    tailf
}

function reload() {
    build
    restart
    tailf
}

if [ "$1" == "" ]; then
    help
elif [ "$1" == "stop" ];then
    stop
elif [ "$1" == "start" ];then
    start
elif [ "$1" == "restart" ];then
    restart
elif [ "$1" == "status" ];then
    status
elif [ "$1" == "tail" ];then
    tailf
elif [ "$1" == "build" ];then
    build
elif [ "$1" == "pack" ];then
    pack
elif [ "$1" == "packbin" ];then
    packbin
elif [ "$1" == "pid" ];then
    pid
elif [ "$1" == "update" ];then
    update $2
elif [ "$1" == "reload" ];then
    reload
else
    help
fi
